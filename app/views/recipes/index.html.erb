<%= render 'recipes/navbar.html.erb' %>

<section class="container-fluid mb-5 mt-5">
<h1>ENJOY A  <%= @search %> RECIPE</h1>

<table border="1" role="table">
    <tr class="text-center">
        <th>Image</th>
        <th>Title</th>
        <th>Ingredients</th>
    </tr>
    <% @recipes.each do |recipe| %>
        <tr class="text-center">
            <td><%= link_to image_tag(recipe['thumbnail'],size: "80x80"), recipe['href'] %></td>
            <td><%= link_to (recipe['title']), recipe['href'] %></td>
            <td><%= recipe['ingredients'] %></td>
        </tr>
    <% end %>
</table>
</section>
